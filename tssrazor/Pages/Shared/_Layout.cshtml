                        <a href="" class="nav-link" data-toggle="dropdown">
                            <span class="fa fa-file-text">
                                <i class="fa">文章</i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" asp-page="/Articles/Index" asp-route-pageIndex="1">
                                <span class="fa fa-list">
                                    <i class="fa">列表</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-folder-open">
                                    <i class="fa">开通</i>
                                </span>
                            </a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="" class="nav-link" data-toggle="dropdown">
                            <span class="fa fa-flag">
                                <i class="fa">目标</i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="" class="dropdown-item">
                                <span class="fa fa-paper-plane">
                                    <i class="fa">我的目标</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-gavel">
                                    <i class="fa">我的督促</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-file-code-o">
                                    <i class="fa">未交作业</i>
                                </span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-handshake-o">
                                    <i class="fa">寻求督促</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-eye">
                                    <i class="fa">督促他人</i>
                                </span>
                            </a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="" class="nav-link" data-toggle="dropdown">
                            <span class="fa fa-coffee">
                                <i class="fa">社区</i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="" class="dropdown-item">
                                <span class="fa fa-list-alt">
                                    <i class="fa">列表</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-edit">
                                    <i class="fa">发布</i>
                                </span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <h6 class="dropdown-header">版块</h6>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-graduation-cap">
                                    <i class="fa">超级班级</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-th-list">
                                    <i class="fa">疑问列表</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-print">
                                    <i class="fa">疑问发布</i>
                                </span>
                            </a>
                        </div>
                    </li>

                    @if (ViewData["HasLogon"] != null)
                    {
                    
                    <li class="nav-item dropdown">
                        <a href="" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <span class="fa fa-user-circle-o">
                                <i class="fa">用户</i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="" class="dropdown-item">
                                <span class="fa fa-home">
                                    <i class="fa">我的主页</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-tasks">
                                    <i class="fa">新手任务</i>
                                </span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-eercast bean">
                                    <i class="fa">学习豆</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-bullseye dot">
                                    <i class="fa">学习点</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-user-secret credit">
                                    <i class="fa">学习币</i>
                                </span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <h6 class="dropdown-header">修改</h6>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-lock">
                                    <i class="fa">我的密码</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-envelope">
                                    <i class="fa">联系方式</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-camera">
                                    <i class="fa">个人资料</i>
                                </span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-page="/Members/Logoff">
                                <span class="fa fa-sign-out">
                                    <i class="fa">退出登录</i>
                                </span>
                            </a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <span class="fa fa-gear">
                                <i class="fa">管理</i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" asp-page="/Backstage/MessageMine" asp-route-msgStatus="0" asp-route-pageIndex="1">
                                <span class="fa fa-bell">
                                    <i class="fa">我的消息</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-file-o">
                                    <i class="fa">我的草稿</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-user-plus">
                                    <i class="fa">邀请注册</i>
                                </span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <h6 class="dropdown-header">广告推广</h6>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-fax">
                                    <i class="fa">联系我们</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-window-maximize">
                                    <i class="fa">侧边栏</i>
                                </span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <h6 class="dropdown-header">学习币</h6>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-cart-plus">
                                    <i class="fa">购买</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-shopping-cart">
                                    <i class="fa">出售</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-download">
                                    <i class="fa">已购买</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-upload">
                                    <i class="fa">已出售</i>
                                </span>
                            </a>
                        </div>
                    </li>

                    }
                    else
                    {

                    <li class="nav-item dropdown">
                        <a href="" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <span class="fa fa-unlink">
                                <i class="fa">未登录</i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" asp-page="/Members/Logon">
                                <span class="fa fa-sign-in">
                                    <i class="fa">登录</i>
                                </span>
                            </a>
                            <a class="dropdown-item" asp-page="/Members/Register">
                                <span class="fa fa-registered">
                                    <i class="fa">注册</i>
                                </span>
                            </a>
                            <a href="" class="dropdown-item">
                                <span class="fa fa-unlock-alt">
                                    <i class="fa">忘记密码</i>
                                </span>
                            </a>
                        </div>
                    </li>

                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()

        <hr />
        <footer>
            <div>
                <a href="">关于我们</a>
                <span> | </span>
                <a href="">超级课堂</a>
                <span> | </span>
