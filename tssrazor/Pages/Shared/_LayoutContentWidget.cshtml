@{
    Layout = "_LayoutContent";
}

@RenderBody()

@section WidgetKeywords {
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">
                <span class="fa fa-tags">
                    <i class="fa">关键字</i>
                </span>
            </h5>
            <hr />
            <div>
                <span class="d-inline-block h4 mr-3">
                    <a href="" class="badge badge-pill badge-dark" data-toggle="tooltip" title="已被使用17次">编程</a>
                </span>
                <span class="d-inline-block h4 mr-3">
                    <a href="" class="badge badge-pill badge-dark" data-toggle="tooltip" title="已被使用12次">软件</a>
                </span>
                <span class="d-inline-block h4 mr-3">
                    <a href="" class="badge badge-pill badge-dark" data-toggle="tooltip" title="已被使用21次">语言</a>
                </span>
            </div>
            <hr />
            <a href="" class="btn btn-outline-info">
                <span class="fa fa-random">
                    <i class="fa">换一批</i>
                </span>
            </a>
        </div>
    </div>
}

@section WidgetInfo {
    <div class="widget-nav mb-4">
        <ul class="nav nav-tabs flex-nowrap">
            <li class="nav-item flex-fill">
                <a href="#supervise" class="nav-link" data-toggle="tab">
                    <span class="fa fa-eye">
                        <i class="fa">每日督</i>
                    </span>
                </a>
            </li>
            <li class="nav-item flex-fill">
                <a href="#ranking" class="nav-link active" data-toggle="tab">
                    <span class="fa fa-heart text-danger">
                        <i class="fa">排行榜</i>
                    </span>
                </a>
            </li>
            <li class="nav-item flex-fill">
                <a href="#register" class="nav-link" data-toggle="tab">
                    <span class="fa fa-user-circle-o">
                        <i class="fa">新注册</i>
                    </span>
                </a>
            </li>
        </ul>
        <div class="tab-content border border-top-0 rounded-bottom p-3" style="height: 100px;">
            <div class="tab-pane fade" id="supervise">每日督促</div>
            <div class="tab-pane fade show active" id="ranking">排行榜</div>
            <div class="tab-pane fade" id="register">新注册</div>
        </div>
    </div>
} 